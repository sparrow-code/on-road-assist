{{!-- Header --}}
{{> header }}


    <section class="login-sec contain flex-r">
        <div class="form-wrapper">
            <div class="login-logo flex-r">
                {{!-- <img src="/media/logoonroad.png" alt=""> --}}
            </div>
            <h1>Welcome Back!</h1>
            <form action="/login" method="post">
            <span class="divider"></span>
            <div class="input-label">Mobile Number</div>
           <div class="input-box flex-r">
               <span class="input-icon"><i class="fas fa-user-circle"></i></span>
               <input type="text" name="userName" id="userName" />
           </div>

            <div class="input-label">Password</div>
            <div class="input-box flex-r">
                <span class="input-icon"><i class="fas fa-key"></i></span>
                <input type="password" name="pswd" id="pswd" />
            </div>
            <a href="#">Forgot Password ?</a>
        
            <input class="btn primary-btn" type="submit" value="Login" name="login"/>
            <div class="form-extra">
                Need an account?
                <a href="./register">Register</a>
            </div>
            </form>
        </div>
    </section>

